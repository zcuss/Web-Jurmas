<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Role Pengguna - Juru Masak</title>

    <!-- Bootstrap & Font Awesome -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      rel="stylesheet"
    />

    <style>
      .card-hover:hover {
        transform: translateY(-3px);
        transition: 0.3s ease;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      .card-welcome {
        border-left: 4px solid #4e73df;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }

      .card-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #343a40;
      }

      .card-subtitle {
        font-size: 1.1rem;
        color: #6c757d;
      }
    </style>
  </head>

  <body class="d-flex flex-column min-vh-100">
    <!-- Sidebar -->
    <%- include('-partials/sidebar', { currentRoute: currentRoute }) %>

    <!-- Main Content -->
    <div class="container my-4">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">Daftar Role Pengguna</h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered table-hover">
              <thead class="table-light">
                <tr>
                  <th>Username</th>
                  <th>Nama</th>
                  <th>Role</th>
                  <th>Aksi</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach(user => { %>
                  <tr>
                    <td><%= user.username %></td>
                    <td><%= user.nama %></td>
                    <td><%= user.role %></td>
                    <td>
                      <button
                        class="btn btn-sm btn-warning"
                        data-bs-toggle="modal"
                        data-bs-target="#editModal-<%= user.id %>"
                      >
                        <i class="fas fa-edit"></i> Edit
                      </button>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal Forms for Edit -->
    <% users.forEach(user => { %>
      <div
        class="modal fade"
        id="editModal-<%= user.id %>"
        tabindex="-1"
        aria-labelledby="editModalLabel-<%= user.id %>"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <form action="/role/update/<%= user.id %>" method="POST" class="modal-content bg-white rounded-3 shadow border-0">
            <div class="modal-header">
              <h5 class="modal-title" id="editModalLabel-<%= user.id %>">
                Edit Pengguna: <%= user.username %>
              </h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
              <div class="mb-3">
                <label class="form-label">Nama</label>
                <input
                  type="text"
                  name="nama"
                  class="form-control"
                  value="<%= user.nama %>"
                />
              </div>
              <div class="mb-3">
                <label class="form-label">Role</label>
                <select name="role" class="form-select" required>
                  <% roles.forEach(r => { %>
                    <option value="<%= r %>" <%= user.role === r ? 'selected' : '' %>>
                      <%= r.charAt(0).toUpperCase() + r.slice(1) %>
                    </option>
                  <% }) %>
                </select>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
              <button type="submit" class="btn btn-primary">Simpan Perubahan</button>
            </div>
          </form>
        </div>
      </div>
    <% }) %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>
  </body>
</html>
