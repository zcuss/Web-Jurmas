<!-- Font Awesome & Bootstrap -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/css/sidebar.css">

<div class="d-flex">
  <!-- Sidebar -->
  <div id="sidebar" class="sidebar bg-dark text-white position-fixed">
    <div class="sidebar-title d-flex align-items-center px-3 py-3 border-bottom border-secondary">
        <i class="fas fa-clipboard-list me-2"></i>
        <span class="fs-5 fw-semibold">JURU MASAK</span>
    </div>

    <ul class="nav flex-column mt-3 px-2">
        <!-- Dashboard -->
        <li class="nav-item">
            <a href="/dashboard"
              class="nav-link px-3 py-2 rounded <%= currentRoute === 'dashboard' ? 'active fw-bold' : '' %>"
              <%= currentRoute === 'dashboard' ? 'aria-current="page"' : '' %>>
                <i class="fas fa-file-alt me-2"></i>
                <span>Dashboard</span>
            </a>
        </li>
        <li class="nav-item">
          <a href="/kalkulator"
            class="nav-link px-3 py-2 rounded <%= currentRoute === 'kalkulator' ? 'active fw-bold' : '' %>">
              <i class="fas fa-tags me-2"></i>Kalkulator
          </a>
        </li>

        <hr class="my-2 border-secondary">
        <% if (user && (user.role === 'superadmin') || process.env.DEBUG_MODE === 'true') { %>
        <li class="nav-item">
          <a href="/changelog"
            class="nav-link px-3 py-2 rounded <%= currentRoute === 'changelog' ? 'active fw-bold' : '' %>">
              <i class="fas fa-history me-2"></i>Change Log
          </a>
        </li>
        <li class="nav-item">
          <a href="/role"
            class="nav-link px-3 py-2 rounded <%= currentRoute === 'role' ? 'active fw-bold' : '' %>">
              <i class="fas fa-hammer me-2"></i>Role
          </a>
        </li>
        <hr class="my-2 border-secondary">
        <% } %>
        
        <!-- Barang -->
        <li class="category-title"><i class="fas fa-box me-2"></i>Barang</li>
        
        <li class="nav-item">
            <a href="/harga-bahan"
              class="nav-link px-3 py-2 rounded <%= currentRoute === 'harga-bahan' ? 'active fw-bold' : '' %>">
                <i class="fas fa-tags me-2"></i>Harga Bahan
            </a>
        </li>
        <li class="nav-item">
            <a href="/stock-bahan"
              class="nav-link px-3 py-2 rounded <%= currentRoute === 'stock-bahan' ? 'active fw-bold' : '' %>">
                <i class="fas fa-home me-2"></i>Stock Bahan
            </a>
        </li>
        <li class="nav-item">
            <a href="/stock-kulkas"
              class="nav-link px-3 py-2 rounded <%= currentRoute === 'stock-kulkas' ? 'active fw-bold' : '' %>">
                <i class="fas fa-snowflake me-2"></i>Stok Kulkas
            </a>
        </li>

        <!-- Admin & Owner visible in debug mode or for users with admin/owner role -->
        <% if (user && (user.role === 'superadmin') || process.env.DEBUG_MODE === 'true') { %>
            <li class="nav-item">
                <a href="/stock-fix"
                  class="nav-link px-3 py-2 rounded <%= currentRoute === 'stock-fix' ? 'active fw-bold' : '' %>">
                    <i class="fas fa-warehouse me-2"></i>Stock Fix
                </a>
            </li>
        <% } %>

        <!-- Admin & Owner visible in debug mode or for users with admin/owner role -->
        <% if (user && (user.role === 'admin' || user.role === 'superadmin') || process.env.DEBUG_MODE === 'true') { %>
            <li class="nav-item">
                <a href="/restock"
                  class="nav-link px-3 py-2 rounded <%= currentRoute === 'restock' ? 'active fw-bold' : '' %>">
                    <i class="fas fa-rotate-right me-2"></i>Restock
                </a>
            </li>
            <li class="nav-item">
                <a href="/withdraw"
                  class="nav-link px-3 py-2 rounded <%= currentRoute === 'withdraw' ? 'active fw-bold' : '' %>">
                    <i class="fas fa-box-open me-2"></i>Withdraw
                </a>
            </li>
        <% } %>

        <hr class="my-2 border-secondary">

        
            <li class="category-title"><i class="fas fa-money-bill-wave me-2"></i>Uang</li>

            <li class="nav-item">
                <a href="/uang-wd"
                  class="nav-link px-3 py-2 rounded <%= currentRoute === 'uang-wd' ? 'active fw-bold' : '' %>">
                    <i class="fas fa-money-bill-wave me-2"></i>Uang WD
                </a>
            </li>
            <li class="nav-item">
                <a href="/uang-kas"
                  class="nav-link px-3 py-2 rounded <%= currentRoute === 'uang-kas' ? 'active fw-bold' : '' %>">
                    <i class="fas fa-coins me-2"></i>Uang Kas
                </a>
            </li>
            <li class="nav-item">
                <a href="/uang-gaji"
                  class="nav-link px-3 py-2 rounded <%= currentRoute === 'uang-gaji' ? 'active fw-bold' : '' %>">
                    <i class="fas fa-user-tie me-2"></i>Uang Gaji
                </a>
            </li>

            <hr class="my-2 border-secondary">

            <!-- Logs -->
            <li class="category-title"><i class="fas fa-clock me-2"></i>Logs</li>
            <li class="nav-item">
                <a href="/logs-restock"
                  class="nav-link px-3 py-2 rounded <%= currentRoute === 'logs-restock' ? 'active fw-bold' : '' %>">
                    <i class="fas fa-file-alt me-2"></i>Logs Restock
                </a>
            </li>
            <li class="nav-item">
                <a href="/logs-bahan"
                  class="nav-link px-3 py-2 rounded <%= currentRoute === 'logs-bahan' ? 'active fw-bold' : '' %>">
                    <i class="fas fa-file-alt me-2"></i>Logs Bahan
                </a>
            </li>
            <li class="nav-item">
                <a href="/logs-wd"
                  class="nav-link px-3 py-2 rounded <%= currentRoute === 'logs-wd' ? 'active fw-bold' : '' %>">
                    <i class="fas fa-file-alt me-2"></i>Logs WD
                </a>
            </li>

            <hr class="my-2 border-secondary">
                
            <li class="nav-item">
              <a href="/setoran_tani"
                class="nav-link px-3 py-2 rounded <%= currentRoute === 'setoran-tani' ? 'active fw-bold' : '' %>">
                  <i class="fas fa-tractor me-2"></i>Setoran Tani
              </a>
            </li>
            <hr class="my-2 border-secondary">

            <!-- Logout -->
            <li class="nav-item">
                <a href="/logout"
                  class="nav-link px-3 py-2 rounded">
                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                </a>
            </li>
          
    </ul>
  </div>


  <!-- Main Content -->
  <div class="main-content ms-auto p-4" style="margin-left: 250px;">
    <!-- Konten halaman di sini -->
  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
