<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Logs Withdraw</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .table td, .table th {
            vertical-align: middle;
            text-align: left;
        }

        .log-date-time {
            font-size: 0.9rem;
            color: #555;
            font-weight: bold;
        }

        .withdraw-item {
            font-weight: bold;
            color: green;
        }
        .withdraw-item table {
            margin-left: 0px;
        }

        .withdraw-item td {
            font-weight: bold;
            font-size: 1rem;
}

    </style>
</head>
<body>
    <%- include('../-partials/sidebar', { currentRoute: currentRoute }) %>

<div class="main-content container mt-4">
    <h1 class="mb-4 text-center text-success">ðŸ“¦ Logs Withdraw</h1>

    <% if (logs.length === 0) { %>
        <p class="text-center text-muted">Belum ada log withdraw.</p>
    <% } else { %>
        <% logs.forEach(log => { %>
            <div class="card mb-4">
                <div class="card-body">
                    <!-- Menampilkan WD Item -->
                    <div class="withdraw-item mb-3">
                        WD:
                        <table>
                            <% log.withdrawItem.forEach(item => { %>
                                <tr>
                                    <td style="white-space: nowrap;">- <%= item.productName %></td>
                                    <td style="padding-left: 10px;">x<%= item.quantity %></td>
                                </tr>
                            <% }); %>
                        </table>
                    </div>                    

                    <table class="table table-bordered table-striped">
                        <thead class="table-success">
                            <tr>
                                <th>Nama Bahan</th>
                                <th>Jumlah</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% log.items.forEach(item => { %>
                                <tr>
                                    <td><%= item.name %></td>
                                    <td><%= item.quantity %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>

                    <div class="log-date-time text-left mt-2">
                        <div><strong>Tanggal:</strong> <%= log.date %></div>
                        <div><strong>Jam:</strong> <%= log.time %></div>
                    </div>
                </div>
            </div>
        <% }); %>
    <% } %>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</body>
</html>
