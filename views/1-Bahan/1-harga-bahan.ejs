<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Withdraw Barang</title>
</head>
<body>
    <!-- SIDEBAR DI LUAR BODY -->
    <%- include('../-partials/sidebar', { currentRoute: currentRoute }) %>
    <div class="main-content container mt-4">
        <h1 class="mb-4 text-center text-success">ðŸ“¦ Harga Bahan</h1>

      <!-- Tabel Harga Barang -->
      <table class="table table-striped table-bordered align-middle">
        <thead class="table-success">
          <tr>
            <th scope="col">Nama Barang</th>
            <th scope="col">Harga (IDP)</th>
            <th scope="col">Terakhir Diperbarui</th>
            <% if (role === 'admin' || role === 'superadmin') { %>
            <th scope="col">Aksi</th>
            <% } %>
          </tr>
        </thead>
        <tbody>
          <% if (items.length > 0) { %>
            <% items.forEach((item, index) => { %>
              <% if (item.item_name && item.item_name.startsWith('skip')) { %>
                <tr class="table-dark">
                  <td colspan="4" class="text-center"></td>
                </tr>
              <% } else { %>
                <tr>
                  <td><%= item.item_name %></td>
                  <td>IDP <%= item.price.toLocaleString('id-ID') %></td>
                  <td><%= moment(item.updatedAt).format('YYYY-MM-DD HH:mm:ss') %></td>
                  <% if (role === 'admin' || role === 'superadmin') { %>
                  <td>   
                      <button type="button" class="btn btn-warning btn-sm"
                        data-bs-toggle="modal"
                        data-bs-target="#updatePriceModal"
                        data-item-id="<%= item.id %>"
                        data-item-name="<%= item.item_name %>"
                        data-item-price="<%= item.price %>">
                        Update Harga
                      </button>
                  </td>
                  <% } %>
                </tr>
              <% } %>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="4" class="text-center">Tidak ada data harga tersedia.</td>
            </tr>
          <% } %>
        </tbody>
      </table>

      <!-- Modal Form Update Harga -->
      <% if (role === 'admin' || role === 'superadmin') { %>
        <div class="modal fade" id="updatePriceModal" tabindex="-1" aria-labelledby="updatePriceModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="updatePriceModalLabel">Update Harga Barang</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <form method="POST" action="/update-harga" id="update-form">
                  <input type="hidden" name="id" id="item-id" />
                  <div class="mb-3">
                    <label for="item-name" class="form-label">Nama Barang</label>
                    <input type="text" class="form-control" id="item-name" name="item_name" value="" disabled>
                  </div>
                  <div class="mb-3">
                    <label for="price" class="form-label">Harga Baru (Rp)</label>
                    <input type="number" class="form-control" id="price" name="price" required>
                  </div>
                  <button type="submit" class="btn btn-primary">Update Harga</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% } %>      
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <% if (role === 'admin' || role === 'superadmin') { %>
  <script>
    var updatePriceModal = document.getElementById('updatePriceModal');
    updatePriceModal.addEventListener('show.bs.modal', function (event) {
      var button = event.relatedTarget;
      var itemId = button.getAttribute('data-item-id');
      var itemPrice = button.getAttribute('data-item-price');
      var itemName = button.getAttribute('data-item-name');

      var modalPrice = updatePriceModal.querySelector('#price');
      var modalItemId = updatePriceModal.querySelector('#item-id');
      var modalItemName = updatePriceModal.querySelector('#item-name');

      modalPrice.value = itemPrice;
      modalItemId.value = itemId;
      modalItemName.value = itemName;
    });
  </script>
  <% } %>
</body>
</html>
